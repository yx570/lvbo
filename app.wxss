/* footer -- start */
.at-footer{
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  z-index: 1000;
}
.at-footer .left{
  float: left;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.at-footer .right{
  float: right;
  text-align: right;
  font-size: 0;
}
.at-footer .right text{
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: middle;
}
.at-footer button{
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  vertical-align: middle;
}
.at-footer button::after{
  display: none;
}
.at-footer text{
  font-size: 32rpx;
}
.at-footer text.sub{
  font-size: 28rpx;
}
/* footer -- start */


/*订单公用样式  */
 .section-tab{
   height: 60rpx;
   line-height: 60rpx;
   margin: 0 30rpx ;
   width: 100%;
 }
 .flex-item{
   float: left;
   color: #999999;
   font-size: 32rpx;
   padding-right: 45rpx;
 }
 .item_title{
  background: #f2f2f2;
  height: 20rpx;
}

.order-list{
  padding: 10rpx 20rpx;
}
.order-item{
  position: relative;
  padding: 30rpx 0;
}
.order-item + .order-item::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-top: 1px solid #e0e0e0;
}
.order-item__hd{
  margin-bottom: 10rpx;
}
.order-item .img-box{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
  background: #e9e9e9;
}
.order-item image{
  width: 100%;
  height: 100%;
}
.order-item .con{
    padding-left: 20rpx;
}
.order-item .title{
  padding-bottom: 36rpx;
  font-size: 32rpx;
  color: #333;
}

.at-number-input .text{
    display: inline-block;
    min-width: 60rpx;
    padding: 0 8rpx;
    font-size: 32rpx;
    color: #333;
    text-align: center;
    vertical-align: middle;
}
/* 加载 */
.loading{
  clear: both;
  padding: 10rpx;
  text-align: center;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}

/* pop -- start */
.pop-footer{
  padding: 20rpx;
}
/* pop -- end */