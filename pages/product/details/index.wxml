<!-- pages/product/details/index.wxml -->
<scroll-view class="home" scroll-y="true" bindscrolltolower="_loadMore">
    <app-swiper 
        imgList="{{ imgList }}"
        showNumber="true"
        indicatorDots="false"
    >
    </app-swiper>
    <view class='ma-20'>
        <view class="flex-row priceBox">
            <view class="color-red">
                <text class="f-36">￥</text>
                <text class="f-54">{{priceInt}}</text>
                <text class="f-36">.{{priceFloat}}</text>
            </view>
            <view class="soldNums">
                本月已售：{{obj.soldNums}}次
            </view>
        </view>
        <view class='productTit ellipse flex-bd'>{{obj.title}}</view>

        <!-- 副标题 -->
        <view class="productSubTit">{{obj.subTitle}}</view>

        <!-- 选择服务 -->
        <view class="selectPrice">
            <view class="weui-cells">
                <view class="weui-cell" data-key="account" bind:tap="navigateChange">
                    <view class="weui-cell__hd">
                        <view>已选</view>
                    </view>
                    <view class="weui-cell__bd">
                        <view>982元/2次</view>
                    </view>
                    <view class="weui-cell__ft">
                        <view class="iconfont icon-arrow-right"></view>
                    </view>
                </view>
            </view>
        </view>
