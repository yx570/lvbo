                <button size="mini" plain data-index="{{index}}" wx:if="{{index == selectIndex}}" type="primary">{{item.times}}次{{item.price}}元</button>
                <button size="mini" plain data-index="{{index}}" bindtap="priceChange" wx:else>{{item.times}}次{{item.price}}元</button>
            </block>
        </view> -->
        <view class="content">
            <view class="clear-both">{{obj.content}}</view>
        </view>
        
        <view class="content">
            <view class="clear-both">{{obj.content}}</view>
        </view>
    </view>
    <view class='detalis-bottom flex-row'>
        <view class="bottom_list numberStep flex-bd">
            <input-number />
        </view>
        <view class='bottom_list bottom_but'>
            <button class='btn-radius c-3d454d' catch:tap="selectTap">加入购物车</button>
        </view>
        <view class='bottom_list bottom_but'>
            <button class='btn-radius' type="primary" catch:tap="shopping">立即购买</button>
        </view>
    </view>
</scroll-view>