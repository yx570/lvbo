/* pages/work/order/details/index.wxss */

@import "/wxParse/wxParse.wxss";
.selectPrice {
    flex-wrap: wrap;
}

.selectPrice button {
    width: 180rpx;
    height:76rpx; 
    line-height: 76rpx;
    margin: 20rpx 20rpx 0 0;
    font-size:30rpx;
    background: #f0f0f0;
    padding: 0;
    border:1rpx solid #dadada;
}

.selectPrice button[plain][type=primary] {
    background: #ffe9ed;
    border:1rpx solid #f9879a;
    color:#f9879a;
}

.selectPrice .fonts {
    margin-right: 40rpx;
}

.selectPrice view {
    font-size: 32rpx;
}

.showComments {
    color: #f9879a;
    font-size: 32rpx;
}

.comment-row .img-box {
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
    vertical-align: middle;
    background: #e9e9e9;
}

.comment-row .con {
    padding-left: 26rpx;
}

.comment-row .title {
    color: #333;
    font-size: 28rpx;
}

.comment-row .weui-panel__hd:after {
    border-bottom: none;
}

.comment-row .weui-panel__hd+.weui-panel__hd {
    padding-top: 0;
}

.comment-row .weui-media-box__desc {
    line-height: 1.5;
    font-size: 28rpx;
    color: #666;
}

.comment-row .weui-panel__ft {
    border-top: 1px solid #eee;
    margin-top: 20rpx;
}

.priceBox {
    justify-content: space-between;
}

.f-36 {
    font-size: 36rpx;
}

.f-54 {
    font-size: 54rpx;
}

.soldNums {
    color: #a4a4a4;
    display: flex;
    align-items: center;
    justify-content: center;
}

.productTit {
    font-size: 35rpx;
    padding-right: 20rpx;
    margin: 10rpx;
}

.productSubTit {
    font-size: 26rpx;
    color: #a4a4a4;
}

.comment-row,
.selectPrice .weui-cells {
    margin-top: 30rpx;
    border: 1rpx solid #eee;
    background-color: #fafafa;
    border-radius: 18rpx;
}
.selectPrice .weui-cells:before,
.selectPrice .weui-cells:after { border:none;}

.pruductContent {
    margin: 30rpx 0;
}

.pruductContent image {
    border-radius: 30rpx;
}

.pruductContent .wxParse-p {
    line-height: 1.5;
    margin: 30rpx 0;
    font-size: 34rpx;
    color: #666;
}

.buyNotice {
    background-color: #f3f3f3;
    padding-top: 30rpx;
}

.buyNotice .contents {
    background-color: #fff;
}

.noticeTitle {
    padding: 30rpx;
    color: #f9879a;
    font-size: 36rpx;
    text-align: center;
    position: relative;
}

.noticeTitle .line {
    content: " ";
    position: absolute;
    z-index: 0;
    width: 60%;
    height: 1rpx;
    left: 20%;
    top: 49%;
    border-top: 1px solid #f9879a;
}

.noticeTitle text {
    position: relative;
    z-index: 2;
    background-color: #fff;
    padding: 0 50rpx;
}

.noticeContent {
    padding: 0 30rpx 50rpx;
    color: #666;
}

.noticeContent .wxParse-div,
.noticeContent .wxParse-p {
    padding-bottom: 20rpx;
}

.noticeContent .wxParse-i {
    position: relative;
    top: 6rpx;
    display: inline-block;
    margin-right: 20rpx;
    width: 32rpx;
    height: 32rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: cover;
}

.detalis-bottom {
    height: 100rpx;
    width: 100%;
    background: #fff;
    position: fixed;
    z-index: 9;
    padding-left:20rpx;
    bottom: 0;
}

.icon-home, .icon-gouwuche{
    font-size: 45rpx;
  }

.bottom_list {
    color: #b8b8b8;
}
.bottom_link {
    flex: .7
}
.bottom_link .items {
    padding-top:12rpx;
    flex:1;
    text-align: center;
    color:#b1b1b1;
}
.bottom_link .items image {
    width:50rpx;
    height:50rpx;
}
.bottom_link .items view {
    font-size:22rpx;
}
.bottom_but {
    padding-top:10rpx;
    text-align:center;
    flex: 1.3;
}

.bottom_but button {
    width:44%;
    display:inline-block;
    vertical-align: top;
    font-size: 32rpx;
    color:#fff;
    height:80rpx;
    line-height: 80rpx;
}

.btn-cart { border-top-left-radius: 40rpx; border-bottom-left-radius: 40rpx; border-top-right-radius: 0; border-bottom-right-radius: 0; background: #ffc05d;}
.btn-buy { border-top-right-radius: 40rpx; border-bottom-right-radius: 40rpx; border-top-left-radius: 0; border-bottom-left-radius: 0; background: #f9879a;}

.popBox {bottom:0rpx;left:0;border-radius: 20rpx;width:95%;margin: 20rpx;}
.popBox .soldNums {
    justify-content: left;
} 
.popBox .img-box { width:140rpx; height: 140rpx; border-radius: 20rpx; overflow: hidden; margin-right:30rpx;}
.popBox .popNums { width:300rpx; margin-bottom: 60rpx;}
.popBox .popItem { margin-top:40rpx;}
.popBox .popItem .subTit { font-size:28rpx; margin-bottom: 10rpx;}