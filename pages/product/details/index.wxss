.work-header{
    position: absolute;
    margin-top: 0;
    width: 100%;
    height: 160rpx;
    z-index: 1;
}
.work-header::before,
.work-header::after{
    position: absolute;
    background: #fff;
    border-radius: 50%;
    opacity: 0.1;
}
.worklist .work-header::before{
    top: 0;
    left: 50%;
    width: 56rpx;
    height: 56rpx;
    opacity: 0.05;
}
.worklist .work-header::after{
    top: 30rpx;
    right: 40rpx;
    left: auto;
    width: 108rpx;
    height: 108rpx;
}
