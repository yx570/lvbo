.panel-measure{
  overflow-x: hidden;
}
.measure-content{
  padding-bottom: 140rpx;
}
.measure-content .title{
  position: relative;
  font-size: 42rpx;
}
.measure-content .r-btn{
  position: absolute;
  top: 8rpx;
  right: 26rpx;
  font-size: 30rpx;
}
.measure-content .r-btn text{
  padding-left: 16rpx;
  font-size: 30rpx;
}
.data-area{
  padding-top: 60rpx;
}
.data-list{
  margin-top: 60rpx;
  border-top: 1px solid #f3f3f3;
}
.data-box{
  position: relative;
  width: 33.33333%;
  height: 270rpx;
}
.data-box::before,
.data-box::after{
  content: '';
  position: absolute;
}
.data-box::before{
  top: 0;
  right: 0;
  height: 100%;
  border-right: 1px solid #f3f3f3;
}
.data-box::before{
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #f3f3f3;
}
.data-box .input{
  padding-top: 50rpx;
  font-size: 54rpx;
}
.data-box .label{
  padding: 16rpx 0;
}
.data-box .label text{
  font-size: 26rpx;
  color: #bcbcbc;
}
.data-box .img{
  padding: 0 20rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.chart-area{
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
}
.measure-content .btn-area{
  padding: 40rpx 0;
}
.measure-content .btn-area button + button{
  margin-left: 20rpx;
}
.panel-measure .app-footer{
  height: 140rpx;
  padding: 20rpx;
  background: #fff;
}

.panel-measure .app-footer button{
  border-radius: 100rpx;
}

.canvas{
  width: 100%;
  height: 150px;
}
.modal-content .pop-rows{
  border-radius: 16rpx;
}