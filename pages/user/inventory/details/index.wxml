<view class="panel-inventory-details">
	<view class="weui-cells details-top bg-white">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="name">{{ goods.goodsName }}</view>
        <view class="color-999">商品编号：{{ goods.sku }}</view>
      </view>
      <!-- <view class="weui-cell__ft color-999">
        商品编号：{{ goods.sku }}
      </view> -->
    </view>
  </view>
  <view class="weui-cells details-list-header bg-white">
    <view class="weui-cell align-center">
      <view class="weui-cell__bd">库存数量</view>
      <view class="weui-cell__bd">调整时间</view>
      <view class="weui-cell__bd">调整记录</view>
      <view class="weui-cell__bd">类型</view>
      <view class="weui-cell__bd">调整数量</view>
    </view>
  </view>
  <scroll-view scroll-y="true" bindscrolltolower="_loadMore">
    <view class="weui-cells details-list" wx:if="{{ list.length > 0 }}">
      <view class="weui-cell align-center" wx:for="{{ list }}" wx:key="{{ index }}">
        <view class="weui-cell__bd">{{ item.result }}</view>
        <view class="weui-cell__bd">{{ item.createTime }}</view>
        <view class="weui-cell__bd">
          <view>库存由{{ item.original }}</view>
          <view>修改为{{ item.result }}</view>
        </view>
        <view class="weui-cell__bd">{{ item.type.key }}</view>
        <view class="weui-cell__bd {{ item.change > 0 ? 'color-primary' : '' }}">{{ item.change }}</view>
      </view>
    </view>
    <view class="loading complete col-999" hidden="{{ hasNextPage }}" wx:if="{{ list.length > 0 }}">-已加载全部-</view>
    <view wx:else>
      <app-empty />
    </view>
  </scroll-view>
</view>
