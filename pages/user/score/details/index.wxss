.panel-score{
  position: relative;
  overflow-x: hidden;
}
.scroll-box { padding-bottom:50rpx;}
.panel-score::before{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-top: 2rpx solid #f3f3f3;
}
.panel-score .content{
  padding-bottom: 140rpx;
}
.panel-score__ft{
  padding: 40rpx 0;
}
.panel-score__ft .img-box{
  width: 136rpx;
  height: 136rpx;
  border-radius: 20rpx;
}
.panel-score__ft .img-box image{
  border-radius: 20rpx;
}
.panel-score__ft .con{
  padding-left: 30rpx;
}
.panel-score__ft .title{
  font-size: 36rpx;
}
.panel-score__bd .label{
  width: 160rpx;
  font-size: 30rpx;
}
.panel-score__bd .stars .iconfont{
  margin-right: 10rpx;
}
.panel-score__bd .tag-btns{
  padding: 20rpx 0;
}
.panel-score__bd .tag-btns button{
  margin:0 16rpx 16rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.panel-score .app-footer{
  height: 140rpx;
  padding: 20rpx;
  background: #fff;
}

.panel-score .app-footer button{
  border-radius: 100rpx;
}

.panel-score .textarea{
  width: 100%;
  height: 260rpx;
  padding: 22rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.panel-score .images{
  padding: 28rpx 0 8rpx;
}
.panel-score .images .img-box{
  width: 128rpx;
  height: 128rpx;
  border-radius: 10rpx;
  text-align: center;
}
.panel-score .images .img-box image{
  border-radius: 10rpx;
}
.panel-score .images .iconfont{
  font-size: 56rpx;
  line-height: 128rpx;
  color: #dcdcdc;
}

.modal-content .pop-rows{
  border-radius: 16rpx;
}