.panel-wallet{
    min-height: 100%;
    background: #f3f3f3;
}
.panel-wallet .weui-cells{
    position: relative;
    margin-top: 0;
}
.panel-wallet .weui-cells.last-box{
    margin-top: 26rpx;
}
.panel-wallet-header{
    padding: 20rpx 0 0; 
    text-align: center;
}
.panel-wallet-header::before,
.panel-wallet-header::after{
    position: absolute;
    background: #fff;
    border-radius: 50%;
    opacity: 0.1;
}
.panel-wallet-header::before{
    top: 60rpx;
    left: 50%;
    width: 60rpx;
    height: 60rpx;
    opacity: 0.05;
}
.panel-wallet-header::after{
    top: 120rpx;
    right: 20rpx;
    left: auto;
    width: 108rpx;
    height: 108rpx;
}
.panel-wallet-header .iconfont{
    padding-left: 20rpx;
    font-size: 44rpx;
}
.panel-wallet-header .ct{
    opacity: 0.5;
}
.panel-wallet-header .ct button{
    padding: 0 28rpx;
    line-height: 40rpx;
    border-color: #fff;
    color: #fff;
}
.panel-wallet-header .cb{
    font-size: 100rpx;
}
.asset-box{
    padding: 10rpx 0;
    text-align: center;
    background: linear-gradient(to right,#ff590d, #ff790d) !important;
}
.asset-box::before{
    border:0;
}
.asset-box .cb{
    opacity: 0.5;
}
.operate-box .weui-cell__bd{
    padding-left: 20rpx;
}
