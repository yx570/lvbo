
.panel-wallet-bindcard{
  position: relative;
  min-height: 100%;
  overflow: hidden;
}
.bindcard-form .weui-cells{
  margin-top: 0;
}
.bindcard-form .weui-cells::before,.bindcard-form .weui-cells::after{
  height: 0;
  border: 0;
}
.bindcard-form .btns{
  margin-top: 40rpx;
  padding: 0rpx 30rpx;
}
.pop-cells{
  margin-top: 0;
  
}

.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  }

.modal-body{
  /* position:relative; */
}

.modal-content{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 99999;
}
.animation::after {
    content:'';
    display: block;
    width:2rpx;
    height:35rpx;
    animation: blink 1s infinite steps(1, start);
    position: absolute;
    top: 83rpx;
    left: 375rpx;
  }
@keyframes blink {
 0%{
   background-color: white;
 }
 50% {
   background-color: #969393;
 }
 100% {
   background-color: white;
 }
}