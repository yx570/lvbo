.panel-wallet-card{
  position: relative;
  min-height: 100%;
}
.card-list{
  padding: 30rpx;
}

.card-item{
  position: relative;
  padding: 30rpx 36rpx;
  box-shadow: 0 0 8rpx #999;
  border-radius: 20rpx;
  overflow: hidden;
}
.card-item + .card-item{
  margin-top: 30rpx;
}
.card-item .icon-money{
  position: absolute;
  top: -150rpx;
  right: -60rpx;
  font-size: 300rpx;
  color: #f8f8f8;
  transform: rotateZ(-45deg);
}
.card-item .top .inline-item{
  font-size: 44rpx;
  font-weight: bold;
}
.card-item .top .default{
  padding: 4rpx 8rpx;
  margin-left: 40rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: normal;
}
.card-item .bottom{
  margin-top: 80rpx;
}
.panel-wallet-card .btns{
  padding: 0 30rpx;
}
.panel-wallet-card .btns .iconfont{
  position: relative;
  top: -2rpx;
}

