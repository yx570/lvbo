.order-list{
    margin-top: 0;
    overflow: hidden;
}
.order-list .weui-cell::before{
   right: 0;
   left: 0;
}
.order-item{
    position: relative;
    width: 100%;
    padding-top:50rpx;
    padding-bottom:50rpx;
    transition: 0.3s;
}
.order-item.touch-move-active{
    transform: translateX(-200rpx);
}
.order-item .weui-cell__del{
    position: absolute;
    top: 2rpx;
    right: -200rpx;
    width: 200rpx;
    height: 198rpx;
}
.order-item .weui-cell__del button{
    position: relative;
    width: 200rpx; 
    height: 100%;
    line-height: 40rpx; 
    border-radius: 0;
    border: 0;
    transition:width 0.3s;
}
.order-item .weui-cell__del button text{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
}

.order-item .weui-cell__del button::after{
    display: none;
}

.order-item image{
    display: inline-block;
    width: 180rpx;
    height: 180rpx;
    vertical-align: middle;
    border-radius: 20rpx;
    margin-right: 30rpx;
}

.order-item .name{
  max-width: 420rpx;
  height:76rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
}
.panel-cart .order-item .name{
  padding-bottom: 0; 
}
.order-item .size {
    margin:10rpx 0 10rpx;
    color:#adadad;
}
.panel-cart .order-item .at-number-input{
  width: 40%;
}
.order-item .flex-row {
    justify-content: space-between; 
}
.order-item .price{
    font-size: 34rpx;
    line-height: 60rpx;
}
.order-item .price .sub{
    font-size: 20rpx;
}