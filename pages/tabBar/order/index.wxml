<view class="container flex-column">
  <app-tab tabs="{{ tabs }}" equal align="flex-start" />
  <view class="flex-bd">
    <scroll-view class="scroll-box" scroll-y="true" bindscrolltolower="_loadMore">
      <view class="app-rows">
        <view class="app-row" wx:for="{{ list }}" wx:key="{{ item.id }}">
          <navigator url="/pages/order/details/index?id={{ item.id }}">
            <view class="flex-row app-row__hd">
              <view class="flex-bd">订单号：{{ item.number }}</view>
              <view class="flex-ft">{{ item.date }}</view>
            </view>
            <view class="flex-row app-row__bd">
              <view class="flex-hd img-box">
                <image src="{{ item.imageUrl }}"></image>
              </view>
              <view class="flex-bd con">
                <view class="title">{{ item.title }}</view>
                <view class="flex-row">
                  <view class="flex-bd">
                    <button type="primary" size="mini" plain>{{ statusFormat[item.status] || '' }}</button>
                  </view>
                  <view class="flex-ft">
                    <navigator url="/pages/subs/score/index?id={{ item.id }}">
                      <button size="mini" plain wx:if="{{ item.status == 1 }}">去评价</button>
                    </navigator>
                  </view>
                </view>
              </view>
            </view>
          </navigator>
        </view>
      </view>
      <view class="loading complete col-999" hidden="{{ !hasNextPage }}">-已加载全部-</view>
    </scroll-view>  
  </view>
</view>
