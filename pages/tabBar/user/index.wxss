/* pages/tabBar/user/index.wxss */
.panel-user{
    min-height: 100%;
    overflow-x: hidden;
}
.panel-user .weui-cells::before,
.panel-user .weui-cells::after,
.panel-user .weui-cell::before,
.panel-user .weui-cell::after{
    height: 0;
    border: 0;
}
.panel-user-header{
    position: relative; 
    width: 100%;
    margin-top: 0;
    padding: 20rpx 0;
}
.panel-user-header::before,
.panel-user-header::after,
.panel-user-header .cr::before,
.panel-user-header .cr::after{
    content: '';
    position: absolute;
    background: #fff;
    border-radius: 50%;
    opacity: 0.05;
    z-index: 0;
}
.panel-user-header .cr-l{
  position: absolute;
  width: 86rpx;
  height: 86rpx;
  bottom: 180rpx;
  left: 70rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  filter: blur(2rpx);
}
.panel-user-header .cr-l::before{
  top: 120rpx;
  left: -160rpx;
  width: 300rpx;
  height: 300rpx;
  opacity: 0.1;
  filter: blur(8rpx);
}
.panel-user-header .cr-l::after{
  top: 216rpx;
  left: 186rpx;
  width: 100rpx;
  height: 100rpx;
}
.panel-user-header .cr-r{
  position: absolute;
  bottom: 0;
  right: 0;
  left: auto;
}
.panel-user-header .cr-r::before{
  bottom: 70rpx;
  right: -40rpx;
  width: 106rpx;
  height: 106rpx;
  opacity: 0.1;
}
.panel-user-header .cr-r::after{
  bottom: -60rpx;
  right: -60rpx;
  width: 140rpx;
  height: 140rpx;
  opacity: 0.07;
  filter: blur(2rpx);
}
.panel-user .panel-user-header::before{
    top: 110rpx;
    right: 210rpx;
    left: auto;
    width: 56rpx;
    height: 56rpx;
    filter: blur(2rpx);
}
.panel-user .panel-user-header::after{
    top: 18rpx;
    right: 80rpx;
    left: auto;
    width: 94rpx;
    height: 94rpx;
    filter: blur(2rpx);
}
.panel-user-header .userimg{
    display: inline-block;
    width: 158rpx;
    height: 158rpx;
    border-radius: 158rpx;
    overflow: hidden;
}
.panel-user-header .weui-cell__hd + .weui-cell__hd{
    padding-left: 30rpx;
}
.panel-user-header .username{
    font-size: 36rpx;
    color: #fff;
}

.panel-user-body{
    position: relative;
    z-index: 10;
}
.panel-user-body .title{
  padding: 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.panel-user-body .dot{
  position: absolute;
  top: -18rpx;
  right: -24rpx;
}

.panel-user-body .flex-row{
  padding: 20rpx 0;
}
.panel-user-body .order-cells .flex-row{
  padding-bottom: 50rpx;
}
.panel-user-body .order-cells::after{
    content:" ";
    position:absolute;
    bottom:0;
    right:30rpx;
    left:30rpx;
    height:1px;
    border-bottom:1rpx solid #f3f3f3;
}
.panel-user-body .order-cells .img-box{
    position: relative;
    display: inline-block;
    width: 48rpx;
    height: 44rpx;
}
.panel-user-body .tool-cells .flex-hd{
  width: 25%;
  margin-bottom: 40rpx;
}
.panel-user-body .tool-cells .img-box{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}

.panel-technician{
  overflow-x: hidden;
}
.technician-list{
  padding-bottom: 30rpx;
}
.technician-item{
  margin-top: 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}
.technician-item .top{
  margin-bottom: 30rpx;
}
.technician-item .title,
.technician-item .name{
  font-size: 36rpx;
}
.technician-item .countTime text { 
  padding:5rpx 6rpx;
  margin:2rpx; 
  border-radius: 10rpx; 
  color:#fff;
}
.technician-item .date{
  font-size: 26rpx;
}
.technician-item .img-box {
  width: 100rpx;
  height: 100rpx; 
  border-radius: 50%; 
  overflow:hidden;
}
.technician-item .icon-dianhua {
  width: 66rpx;
  height: 66rpx;
  font-size: 30rpx;
  line-height: 62rpx;
  border: 2rpx solid #00b0ab;
  border-radius: 50%;
  text-align: center;
}
.technician-item .con-box {
  padding-left: 30rpx;
}
.technician-item .process-box {
  margin-top: 20rpx;
  padding: 24rpx;
}
.technician-item .process-item {
  padding: 4rpx 0;
  font-size: 26rpx;
}
.technician-item .btn-area {
  margin-top: 30rpx;
}
.technician-item .btn-area button{
  padding: 0 30rpx;
  font-size: 26rpx;
}
.technician-item .btn-area button + navigator,
.technician-item .btn-area navigator + button,
.technician-item .btn-area button  + button{
  margin-left: 16rpx;
}
.technician-item .btn-area navigator{
  display: inline-block;
}

.panel-technician .tabs{
  width: 100%;
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #9ae3e1;
}
.panel-technician .tabs text{
  position: relative;
  display: inline-block;
  font-size: 36rpx;
}
.panel-technician .tabs .flex-bd{
  position: relative;
}
.panel-technician .tabs .active{
  color: #fff;
}
.panel-technician .tabs .active text::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  border: 4rpx solid #ffc926;
}