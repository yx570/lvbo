/* pages/tabBar/user/index.wxss */
.panel-user{
    min-height: 100%;
    background: #f3f3f3;
}
.panel-user .weui-cells::before,
.panel-user .weui-cells::after,
.panel-user .weui-cell::before,
.panel-user .weui-cell::after{
    height: 0;
    border: 0;
}
.panel-user-header{
    position: relative; 
    margin-top: 0;
    width: 100%;
    height: 168rpx;
}
.panel-user-header::before,
.panel-user-header::after{
    position: absolute;
    background: #fff;
    border-radius: 50%;
    opacity: 0.1;
}
.panel-user .panel-user-header::before{
    top: 0;
    left: 50%;
    width: 56rpx;
    height: 56rpx;
    opacity: 0.05;
}
.panel-user .panel-user-header::after{
    top: 50rpx;
    right: 40rpx;
    left: auto;
    width: 108rpx;
    height: 108rpx;
}
.panel-user-header .userimg{
    display: block;
    width: 120rpx;
    height: 120rpx;
    border: 4rpx solid #fff;
    border-radius: 120rpx;
    overflow: hidden;
}
.panel-user-header .weui-cell__hd + .weui-cell__hd{
    padding-left: 30rpx;
}
.panel-user-header .username{
    font-size: 46rpx;
    color: #fff;
}

.panel-user-body{
    position: relative;
    padding: 0 30rpx;
    z-index: 10;
}
.panel-user-body .weui-cells{
    margin-top: 30rpx;
    border-radius: 18rpx;
}
.panel-user-body .weui-cell{
    font-size: 30rpx;
}

.panel-user-body .weui-cell__hd{
    padding-right: 20rpx;
    color: #b7b7b7;
}
.panel-user-body .weui-cell::before{
    content:" ";
    position:absolute;
    top:0;
    right:15px;
    left:15px;
    height:1px;
    border-top:1rpx solid #d9d9d9;
    color:#d9d9d9;
}
