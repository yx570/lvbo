.app-camera{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
}
.app-camera camera{
  position: relative;
  width: 100%;
  height: 100%;
}
.app-camera-hd{
  position: absolute;
  width: 100%;
  z-index: 10009;
}
.btn-reverse{
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 50rpx;
  color: #ffffff;
}
.app-camera-ft{
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  z-index: 10009;
}
.btn-take{
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #ffffff;
  transform: translateX(-50%);
  z-index: 10009;
}
.btn-take::after{
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.6);
}
.btn-cancel{
  position: absolute;
  bottom: 64rpx;
  left: 20%;
  color: #ffffff;
}